<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.atguigu.mall.sale.mapper.SkuListMapper">

	<!-- List<OBJECCT_T_MALL_SKU> select_skulist_by_attr(); -->
	<select id="select_skulist_by_attr" parameterType="Map" resultMap="myskulist" >
		select sku.id sku_id,spu.id spu_id,tm.id tm_id,sku.*,spu.*,tm.* from 
		t_mall_sku sku,
		t_mall_trade_mark tm,
		t_mall_product spu 
		where 
		sku.shp_id=spu.Id and 
		spu.pp_id=tm.Id and 
		flbh2=#{class_2_id}
		${sql}
	</select>
	<!-- List<OBJECCT_T_MALL_SKU> select_skulist_by_class_2_id(Integer class_2_id); -->
	<select id="select_skulist_by_class_2_id" parameterType="int" resultMap="myskulist" >
		select sku.id sku_id,spu.id spu_id,tm.id tm_id,sku.*,spu.*,tm.* from 
		t_mall_sku sku,
		t_mall_trade_mark tm,
		t_mall_product spu 
		where 
		sku.shp_id=spu.Id and 
		spu.pp_id=tm.Id and 
		flbh2=#{class_2_id}
	</select>
	<resultMap type="com.atguigu.mall.sale.bean.OBJECCT_T_MALL_SKU" id="myskulist" autoMapping="true">
		<result column="sku_id" property="id" />
		<association property="spu" javaType="com.atguigu.mall.sale.bean.T_MALL_PRODUCT" autoMapping="true">
			<result column="spu_id" property="id" />
		</association>
		<association property="tm" javaType="com.atguigu.mall.sale.bean.T_MALL_TRADE_MARK" autoMapping="true">
			<result column="tm_id" property="id"/>
		</association>
	</resultMap>
	
	
		
</mapper>